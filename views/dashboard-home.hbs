<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#">
                <em class="fa fa-home"></em>
            </a></li>
            <li class="active">Dashboard</li>
        </ol>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard</h1>
        </div>
    </div><!--/.row-->


    <div class="row">

        <div class="col-md-6">
            <div class="panel panel-default chat">
                <div class="panel-heading">
                    FTP Configuration
                    <div class="pull-right btn btn-primary" data-toggle="modal" data-target="#editFTP">
                        Edit
                    </div>
                </div>

                <div class="panel-body">

                    <table class="table table-borderless">
                        <tr>
                            <td style="width: 30%" >FTP Host</td>
                            <td style="width: 2%">:</td>
                            <td>\{{ftp_conf.ftp_host}}</td>
                        </tr>
                        <tr>
                            <td style="width: 30%" >FTP Port</td>
                            <td style="width: 2%">:</td>
                            <td>\{{ftp_conf.ftp_port}}</td>
                        </tr>
                        <tr>
                            <td style="width: 30%" >FTP Username</td>
                            <td style="width: 2%">:</td>
                            <td>\{{ftp_conf.ftp_username}}</td>
                        </tr>
                        <tr>
                            <td style="width: 30%" >FTP Password</td>
                            <td style="width: 2%">:</td>
                            <td>\{{ftp_conf.ftp_password}}</td>
                        </tr>
                        <tr>
                            <td style="width: 30%" >FTP Path</td>
                            <td style="width: 2%">:</td>
                            <td>\{{ftp_conf.ftp_path}}</td>
                        </tr>

                    </table>

                </div>

            </div>

        </div><!--/.col-->

        <div class="col-md-6">
            <div class="panel panel-default chat">
                <div class="panel-heading">
                    Area Configuration
                    <div class="pull-right btn btn-primary" data-toggle="modal" data-target="#editFile">
                        Edit
                    </div>
                </div>

                <div class="panel-body">

                    <table class="table table-borderless">
                        <tr>
                            <td style="width: 30%" >Province</td>
                            <td style="width: 2%">:</td>
                            <td>\{{file_conf.domain}}</td>
                        </tr>
                        <tr>
                            <td style="width: 30%" >Area</td>
                            <td style="width: 2%">:</td>
                            <td>\{{file_conf.description}}</td>
                        </tr>
                        <tr>
                            <td style="width: 30%" >Last Sync</td>
                            <td style="width: 2%">:</td>
                            <td>\{{file_conf.last_sync}}</td>
                        </tr>

                    </table>

                    <table class="table">
                        <tr>
                            <td style="width: 30%" >XML File</td>
                            <td style="width: 2%">:</td>
                            <td style="width: 30%">\{{ftp_conf.sync_time}}</td>
                            <td style="width: 30%">Sync Time :</td>
                        </tr>
                    </table>

                </div>

            </div>

        </div><!--/.col-->

    </div><!--/.row-->
</div>	<!--/.main-->

<!-- Modal -->
<div id="editFile" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Area Configuration</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal row-border" action="#">
                    <div class="form-group">
                        <label class="col-md-2 control-label">Provinsi</label>
                        <div class="col-md-10">
                            <select class="province-data form-control" v-model="selectedProvince" @change="onChange">
                                <option v-for="province in provinces" v-bind:value="province.province.name">\{{province.province.name}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">Area</label>
                        <div class="col-md-10">
                            <select class="province-data form-control" v-model="selectedArea" :disabled="disabled">
                                <option v-for="area in areas"  v-bind:value="area.id" v-bind:id="area.id">\{{area.name}}</option>
                            </select>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" @click="saveArea">Save</button>
            </div>
        </div>

    </div>
</div>

<!-- Modal -->
<div id="editFTP" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit FTP Configuration</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal row-border" action="#">
                    <div class="form-group">
                        <label class="col-md-2 control-label">FTP Host</label>
                        <div class="col-md-10">
                           <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">FTP Port</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">FTP Username</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">FTP Password</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">FTP Path</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" />
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" @click="saveFTP">Save</button>
            </div>
        </div>

    </div>
</div>