<!DOCTYPE html>
<html>
<head>
    <meta content="{{token}}" name="auth-token"/>
    <title>{{title}}</title>

    <link rel='stylesheet' href='/plugins/bootstrap/css/bootstrap.min.css'/>
    <link rel='stylesheet' href='/plugins/font-awesome/css/font-awesome.min.css'/>
    <link rel='stylesheet' href='/plugins/select2/dist/css/select2.min.css'/>
    <link href="/plugins/sweetalert-master/sweetalert2.min.css" type="text/css" rel="stylesheet">

    {{#each css}}
        <link rel='stylesheet' href='/css/{{this}}.css'/>
    {{/each}}


</head>
<body>
<div id="main-dashboard">
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#sidebar-collapse"><span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span></button>
                <a class="navbar-brand" href="#"><span>Signage</span>Admin</a>

            </div>
        </div><!-- /.container-fluid -->
    </nav>

    <div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
        <div class="profile-sidebar">
            <div class="profile-usertitle">
                <div class="profile-usertitle-name">\{{onlineUser.name}}</div>
                <div class="profile-usertitle-status"><span class="indicator label-success"></span>\{{onlineUser.role}}</div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="divider"></div>
        <form role="search">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
            </div>
        </form>
        <ul class="nav menu">
            <li><a href="/dashboard"><em class="fa fa-dashboard">&nbsp;</em> Dashboard</a></li>
            <li class="nav-link" id="slideManagement"><a><em class="fa fa-sl">&nbsp;</em> Slide Management</a></li>
            <li class="nav-link" id="controlManagement"><a><em class="fa fa-gear">&nbsp;</em> Control Management</a>
            </li>

            <li><a href="login.html"><em class="fa fa-power-off">&nbsp;</em> Logout</a></li>
        </ul>
    </div><!--/.sidebar-->
</div>
<div id="main-show">
    <div v-if="loading == true" class="loading"> Loading </div>
    {{{body}}}
</div>

<script type="text/javascript">
	var server_url = window.location.origin;
</script>

<script type="text/javascript" src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/js/dashboard/jquery-1.11.1.min.js"></script>
<script type="text/javascript" src="/plugins/bootstrap/js/bootstrap.min.js"></script>
<script type="text/javascript" src="/js/dashboard/loadash.js"></script>
<script type="text/javascript" src="/plugins/vue/dist/vue.min.js"></script>
<script type="text/javascript" src="/plugins/vue-resource/dist/vue-resource.min.js"></script>
<script type="text/javascript" src="/plugins/select2/dist/js/select2.js"></script>
<script type="text/javascript" src="/plugins/sweetalert-master/sweetalert2.min.js"></script>
<script type="text/javascript" src="/js/dashboard/dashboard-main.js"></script>

{{#each js}}
    <script type="text/javascript" src="/js/{{this}}.js"></script>
{{/each}}

</body>
</html>
