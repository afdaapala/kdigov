<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>

    <link rel='stylesheet' href='/plugins/bootstrap/css/bootstrap.min.css'/>
    <link rel='stylesheet' href='/plugins/font-awesome/css/font-awesome.min.css'/>
    <link rel='stylesheet' href='/plugins/select2/dist/css/select2.min.css'/>
    <link href="/plugins/sweetalert-master/dist/sweetalert.css" type="text/css" rel="stylesheet">

    {{#each css}}
        <link rel='stylesheet' href='/css/{{this}}.css'/>
    {{/each}}


</head>
<body>
<div id="main-show">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">Daftar</div>
                <div class="panel-body">
                    <form role="form">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" v-model="user.email" placeholder="E-mail" name="email" type="email" autofocus="">
                            </div>
                            <div class="form-group">
                                <input class="form-control" v-model="user.password" placeholder="Password" name="password" type="password"
                                       value="">
                            </div>
                            <div class="form-group">
                                <input class="form-control" v-model="user.confirmPassword" placeholder="Konfirmasi Password" name="password"
                                       type="password" value="">
                            </div>
                            <div class="form-group">
                                <input class="form-control" v-model="user.name" placeholder="Nama Lengkap" name="nama" type="text" value="">
                            </div>
                            <div class="form-group">
                                <label>Provinsi Bertugas:</label>
                                <select class="province-data form-control" v-model="selectedProvince" @change="onChange">
                                    <option v-for="province in provinces" v-bind:value="province._id">\{{province.name}}</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Area Bertugas:</label>
                                <select class="province-data form-control" v-model="user.areaID" :disabled="disabled">
                                    <option v-for="area in areas"  v-bind:value="area._id" v-bind:id="area._id">\{{area.name}}</option>
                                </select>
                            </div>

                            <div class="btn btn-primary pull-right" @click="saveUser()">Daftar</div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->
</div>

<script type="text/javascript">
        var server_url = window.location.origin;
</script>

<script type="text/javascript" src="/js/dashboard/jquery-1.11.1.min.js"></script>
<script type="text/javascript" src="/plugins/bootstrap/js/bootstrap.min.js"></script>
<script type="text/javascript" src="/js/dashboard/loadash.js"></script>
<script type="text/javascript" src="/plugins/vue/dist/vue.min.js"></script>
<script type="text/javascript" src="/plugins/vue-resource/dist/vue-resource.min.js"></script>
<script type="text/javascript" src="/plugins/select2/dist/js/select2.js"></script>
<script type="text/javascript" src="/plugins/sweetalert-master/dist/sweetalert.min.js"></script>

<!--<script type="text/javascript" src="/js/dashboard.js"></script>-->
{{#each js}}
    <script type="text/javascript" src="/js/{{this}}.js"></script>
{{/each}}

</body>
</html>
